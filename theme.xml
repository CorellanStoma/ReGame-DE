<!-- ╚══════════════════════════╩═════════════════════════════════════════════════════════════════════════════════════════╝ -->



<!-- ╔══════════════════════════╦═════════════════════════════════════════════════════════════════════════════[─]═[□]═[×]═╗ -->
<!-- ║ Gamelist                 ║ Carousel                                                                                ║ -->
<!-- ╚══════════════════════════╩═════════════════════════════════════════════════════════════════════════════════════════╝ -->

<!-- ╔══════════════════════════╦═════════════════════════════════════════════════════════════════════════════[─]═[□]═[×]═╗ -->
<!-- ║ Gamelist                 ║ Background Music                                                                        ║ -->
<!-- ╚══════════════════════════╩═════════════════════════════════════════════════════════════════════════════════════════╝ -->

  <variant name="DarkMode, LightMode, Emerald, Ruby">
    <view name="gamelist">
      <video name="music">
        <pos>0 0</pos>
        <size>1 1</size>
        <path>./assets/video/systems/${system.theme}.mp4</path>
        <default>./assets/video/systems/unknown.mp4</default>
        <opacity>0.00001</opacity>
        <zIndex>0</zIndex>
      </video>
    </view>
  </variant>



</theme>